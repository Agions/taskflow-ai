{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src-new",
    "baseUrl": "./src-new",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react-jsx",
    
    "paths": {
      "@core/*": ["core/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@integrations/*": ["integrations/*"],
      "@interfaces/*": ["interfaces/*"],
      "@config/*": ["config/*"],
      "@assets/*": ["assets/*"]
    },
    
    "types": [
      "node"
    ],
    
    "typeRoots": [
      "node_modules/@types",
      "src-new/types"
    ]
  },
  
  "include": [
    "src-new/**/*",
    "src-new/**/*.json"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "src",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "experimentalSpecifierResolution": "node"
  }
}