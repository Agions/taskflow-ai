{
  "name": "taskflow-ai",
  "version": "1.0.1",
  "description": "TaskFlow AI - 智能PRD文档解析与任务管理助手，专为开发团队设计的AI驱动任务编排工具",
  "logo": "assets/logo.svg",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "bin": {
    "taskflow": "bin/index.js",
    "taskflow-ai": "bin/index.js"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "build:analyze": "ANALYZE=true rollup -c",
    "test": "jest",
    "test:performance": "jest --config tests/performance/jest.config.js --runInBand",
    "test:benchmark": "npm run test:performance -- --verbose",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run pre-release-check",
    "pre-release-check": "node scripts/pre-release-check.js",
    "release": "npm run pre-release-check && npm publish",
    "size": "npm run build && ls -la dist/ | grep -E '\\.(js|map)$'"
  },
  "keywords": [
    "ai",
    "task-management",
    "prd-parser",
    "project-planning",
    "mcp",
    "cursor",
    "vscode",
    "deepseek",
    "国产大模型",
    "任务管理",
    "开发助手",
    "智能编排",
    "文档解析"
  ],
  "author": "TaskFlow AI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agions/taskflow-ai.git"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "compression": "^1.8.0",
    "conf": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.2.0",
    "helmet": "^8.1.0",
    "inquirer": "^9.2.14",
    "jsonwebtoken": "^9.0.2",
    "markdown-it": "^14.1.0",
    "multer": "^2.0.1",
    "ora": "^7.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chalk": "^0.4.31",
    "@types/compression": "^1.8.1",
    "@types/conf": "^2.1.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/fs-extra": "^11.0.4",
    "@types/helmet": "^0.0.48",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/markdown-it": "^13.0.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.25",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.2.5",
    "rollup": "^4.12.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin"
  ]
}