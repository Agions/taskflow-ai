{
  "name": "taskflow-ai",
  "version": "2.0.0",
  "description": "TaskFlow AI - 智能PRD文档解析与任务管理助手，支持多模型AI协同、MCP编辑器集成，专为开发团队设计的CLI工具",
  "logo": "assets/logo.svg",
  "main": "dist/engine.js",
  "module": "dist/engine.mjs",
  "types": "dist/engine.d.ts",
  "bin": {
    "taskflow": "dist/cli.js",
    "taskflow-ai": "dist/cli.js",
    "taskflow-mcp": "dist/mcp-manager.js"
  },
  "scripts": {
    "dev": "node esbuild.config.js watch",
    "build": "node esbuild.config.js build",
    "build:watch": "node esbuild.config.js watch", 
    "build:analyze": "ANALYZE=true node esbuild.config.js build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.config.integration.js",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "lint": "eslint src-new --ext .ts,.tsx",
    "lint:fix": "eslint src-new --ext .ts,.tsx --fix",
    "format": "prettier --write \"src-new/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src-new/**/*.{ts,tsx,json}\"",
    "type-check": "tsc --noEmit",
    "validate": "node scripts/build.js validate",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "clean": "node scripts/build.js clean",
    "clean:all": "node scripts/build.js clean:all",
    "info": "node scripts/build.js info",
    "prepublishOnly": "npm run clean && npm run build && npm run test:all",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "start": "node scripts/build.js start",
    "start:dev": "node scripts/build.js start:dev",
    "mcp": "node dist/mcp-manager.js",
    "mcp:dev": "node dist/mcp-manager.js --verbose",
    "mcp:test": "node scripts/test-mcp-server.js",
    "setup": "npm install && npm run build",
    "postinstall": "node -e \"console.log('\\n🎉 TaskFlow AI v2.0 安装成功！\\n🚀 运行 taskflow --help 开始使用\\n🔗 运行 taskflow-mcp 启动MCP服务器\\n📖 查看文档: https://github.com/Agions/taskflow-ai\\n')\""
  },
  "keywords": [
    "ai",
    "task-management", 
    "prd-parser",
    "project-planning",
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "ai-orchestration",
    "intelligent-planning",
    "cursor",
    "windsurf", 
    "vscode",
    "claude-desktop",
    "deepseek",
    "zhipu",
    "qwen",
    "moonshot",
    "productivity",
    "automation",
    "cli-tool",
    "typescript",
    "国产大模型",
    "任务管理",
    "智能编排"
  ],
  "author": "Agions",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agions/taskflow-ai.git"
  },
  "bugs": {
    "url": "https://github.com/Agions/taskflow-ai/issues"
  },
  "homepage": "https://github.com/Agions/taskflow-ai#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.7.0",
    "chalk": "^4.1.2", 
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "jsonwebtoken": "^9.0.2",
    "markdown-it": "^14.1.0",
    "ora": "^5.4.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8",
    "react": "^18.3.1",
    "ink": "^4.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8", 
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/markdown-it": "^14.1.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0", 
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "CHANGELOG.md"
  ],
  "packageManager": "npm@10.0.0",
  "volta": {
    "node": "20.15.0",
    "npm": "10.7.0"
  }
}